<div class="flipcards-inner component-inner" role="region" aria-label="{{_globals._components._flipcards.ariaRegion}}">
    {{> component this}}
    <div class="flipcards-widget component-widget clearfix">
        {{#each _items}}
        <div class="flipcards-item flipcards-item-tap">
            <div class="flipcards-item-face flipcards-item-front">
                <img src="{{frontImage.src}}" class="flipcards-item-frontImage" aria-label="{{frontImage.alt}}" tabindex="0">
            </div>

            <div class="flipcards-item-face flipcards-item-back">
                {{#if backTitle}}
                <div class="flipcards-item-back-title">
                {{{backTitle}}}
                </div>
                {{/if}}
                {{#if backBody}}
                <div class="flipcards-item-back-body">
                {{{backBody}}}
                </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>
</div>
